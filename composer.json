{
    "name": "rpungello/laravel-address-formatter",
    "description": "Address formatter for Laravel powered by commerceguys/addressing",
    "keywords": [
        "rpungello",
        "laravel",
        "laravel-address-formatter"
    ],
    "homepage": "https://github.com/rpungello/laravel-address-formatter",
    "license": "MIT",
    "authors": [
        {
            "name": "Rob Pungello",
            "email": "rob.pungello@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.9.2",
        "illuminate/contracts": "^9.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Rpungello\\AddressFormatter\\": "src",
            "Rpungello\\AddressFormatter\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rpungello\\AddressFormatter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Rpungello\\AddressFormatter\\AddressFormatterServiceProvider"
            ],
            "aliases": {
                "AddressFormatter": "Rpungello\\AddressFormatter\\Facades\\AddressFormatter"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
